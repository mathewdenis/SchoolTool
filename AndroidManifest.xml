<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.bob.school" android:versionCode="1" android:versionName="0.1.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<provider android:name=".db.SchoolProvider"
			android:authorities="org.bob.provider.school" />
		<activity android:name=".KurseList" android:label="@string/title_kurs_list">
			<intent-filter android:label="@string/app_name">
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".KursEditor" android:label="@string/title_kurs_edit">
			<!-- Edit a single course item -->
			<intent-filter android:label="@string/resolv_kurs_edit">
				<action android:name="android.intent.action.EDIT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.course" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.INSERT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.bob.course" />
			</intent-filter>
		</activity>
		<activity android:name=".KursFehlstundenEditor" android:label="@string/title_kurs_fehlstunde_edit">
			<intent-filter>
				<action android:name="org.bob.school.action.ADD_COURSE_MISSES" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.course" />
			</intent-filter>
		</activity>
		<activity android:name=".SchuelerFehlstundenList">
			<intent-filter>
				<action android:name="android.intent.action.PICK" />				
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.pupil" />
			</intent-filter>
		</activity>

		<activity android:name=".KursTab">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.course" />
			</intent-filter>
		</activity>
		<activity android:name=".SchuelerList" android:label="@string/title_pupil_list">
			<intent-filter>
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.course" />
			</intent-filter>
		</activity>
		<activity android:name=".KursFehlstundenList" android:label="@string/title_kurs_fehlstunde_list">
			<intent-filter>
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.bob.course_miss" />
			</intent-filter>
		</activity>		
		<activity android:name=".FehlstundeEditor"
			android:label="@string/title_fehlstunde_edit">
			<intent-filter>
				<action android:name="org.bob.school.action.EDIT_MISS" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.bob.miss" />
			</intent-filter>
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="7" />
</manifest> 