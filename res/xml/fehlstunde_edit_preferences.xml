<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<Preference android:key="date" android:title="@string/date_caption" />
	<ListPreference android:key="miss" android:title="@string/miss_caption"
		android:entries="@array/stunden_wo_0" android:entryValues="@array/stunden_wo_0" />
	<CheckBoxPreference android:key="count" android:title="@string/miss_count_caption" android:summary="@string/sum_count"/>
	<ListPreference android:key="miss_excused"
		android:title="@string/miss_excused_caption" android:entries="@array/stunden"
		android:entryValues="@array/stunden"
		android:dependency="count" />
</PreferenceScreen>
